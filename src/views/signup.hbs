<section class="text-center mt-20">
  <button class="text-center text-white border border-slate-300 rounded-md w-3/12 mt-5 px-5 py-2 bg-slate-900 cursor-pointer hover:bg-slate-600 duration-300" onclick="location.href='/api/sessions/auth/github'">Registrarse con GitHub</button>

  <div class="flex items-center justify-center mt-10 w-4/12 mx-auto">
    <div class="border border-b-2 border-stone-950 w-full mr-5"></div>
    <div class="uppercase font-bols text-md">o</div>
    <div class="border border-b-2 border-stone-950 w-full ml-5"></div>
  </div>

  <form action="/api/sessions/signup" method="post" class="w-2/6 mt-10 mx-auto">
    <fieldset class="w-full border border-slate-900 rounded-md flex flex-col items-center p-5 gap-2">
      <legend class="text-2xl">signup</legend>
      <section class="w-full border border-slate-900 rounded-md flex flex-col p-5 gap-2">
        <section>
          <label for="first_name" class="flex justify-between items-center uppercase font-bold">first name
            <input id="first_name" type="text" name="first_name" placeholder="example: Coder" class="w-2/3 px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none focus:border-sky-700 focus:ring-1 focus:ring-sky-700
              ">
          </label>
        </section>
        <section>
          <label for="last_name" class="flex justify-between items-center uppercase font-bold">last name
            <input id="last_name" type="text" name="last_name" placeholder="example: House" class="w-2/3 px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none focus:border-sky-700 focus:ring-1 focus:ring-sky-700
              ">
          </label>
        </section>
        <section>
          <label for="email" class="flex justify-between items-center uppercase font-bold">email
            <input id="email" type="email" name="email" placeholder="example: curso_backend@coder.com" class="w-2/3 px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none focus:border-sky-700 focus:ring-1 focus:ring-sky-700
              ">
          </label>
        </section>
        <section>
          <label for="age" class="flex justify-between items-center uppercase font-bold">age
            <input id="age" type="Number" name="age" placeholder="example: 23" class="w-2/3 px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none focus:border-sky-700 focus:ring-1 focus:ring-sky-700
              ">
          </label>
        </section>
        <section>
          <label for="password" class="flex justify-between items-center uppercase font-bold">password
            <input id="password" type="password" name="password" placeholder="example: *********" class="w-2/3 px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none focus:border-sky-700 focus:ring-1 focus:ring-sky-700
              ">
          </label>
        </section>
      </section>

      <button onclick="location.href='/login'"
        class="text-center text-white border border-slate-300 rounded-md w-full px-5 py-2 bg-slate-900 cursor-pointer hover:bg-slate-600 duration-300">Sign
        Up</button>
    </fieldset>
  </form>
</section>