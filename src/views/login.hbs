<section class="mt-40 mx-auto text-center mt-20">
  <button
    class="text-center text-white border border-slate-300 rounded-md w-3/12 mt-5 px-5 py-2 bg-slate-900 cursor-pointer hover:bg-slate-600 duration-300"
    onclick="location.href='/api/sessions/auth/github'">Ingresar con GitHub</button>

  <div class="flex items-center justify-center mt-10 w-4/12 mx-auto">
    <div class="border border-b-2 border-stone-950 w-full mr-5"></div>
    <div class="uppercase font-bols text-md">o</div>
    <div class="border border-b-2 border-stone-950 w-full ml-5"></div>
  </div>

  <form class="w-2/6 mt-10 mx-auto" action="/api/sessions/login" method="post">
    <fieldset class="w-full border border-slate-900 rounded-md flex flex-col items-center p-5 gap-2">
      <legend class="text-2xl">login</legend>
      <section class="w-full border border-slate-900 rounded-md flex flex-col p-5 gap-2">
        <section>
          <label for="email" class="flex justify-between items-center uppercase font-bold">email
            <input id="email" type="email" name="email" placeholder="example: curso_backend@coder.com" class="w-2/3 px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none focus:border-sky-700 focus:ring-1 focus:ring-sky-700
              ">
          </label>
        </section>
        <section>
          <label for="password" class="flex justify-between items-center uppercase font-bold">password
            <input id="password" type="password" name="password" placeholder="example: *********" class="w-2/3 px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
              focus:outline-none focus:border-sky-700 focus:ring-1 focus:ring-sky-700
              ">
          </label>
        </section>
      </section>

      <input type="submit" value="Login"
        class="text-center text-white border border-slate-300 rounded-md w-full px-5 py-2 bg-slate-900 cursor-pointer hover:bg-slate-600 duration-300">
    </fieldset>
  </form>
  <button
    class="text-center text-red-900 hover:text-slate-900 duration-300 font-bold w-full mt-10 px-5 py-2 cursor-pointer"><a
      href="/restore">Reset password</a></button>

</section>